{
  "family": "kakeibo-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::682033484197:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "kakeibo-api",
      "image": "682033484197.dkr.ecr.ap-northeast-1.amazonaws.com/kakeibo-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/kakeibo",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
